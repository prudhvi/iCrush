<section class="timeline">
  <% form_tag timeline_path do %>
    <%= text_area_tag :message, nil, :placeholder => 'Message here.' %>
    <%= submit_tag 'Update', :disable_with => 'Updating...' %>
  <% end %>

<%= will_paginate @friends%>
  <% @friends.each do |friend|  %>

    <li class="clearfix">
      <div class="avatar">
        <fb:profile-pic uid="<%= friend.identifier %>" linked="true" size="small"></fb:profile-pic>
        <fb:name uid="<%= friend.identifier %>"></fb:name>
      </div>
    </li>

  <% end %>


</section>