<section class='dashboard'>
  <h2>Hello <fb:name uid='<%= current_user.identifier %>' useyou='false'></fb:name>!</h2>
  <article>
    <h3><%= link_to 'Profile Details', profile_path %></h3>
    <p>User profile.</p>
  </article>
  <article>
    <h3><%= link_to 'CrushLine', timeline_path %></h3>
    <p>Show your crushlist and ratings.</p>
  </article>
  <article>
    <h3><%= link_to 'Invite Friends', '#', :id => :app_request %></h3>
    <p>Send application requests to your friends.</p>
    <p>You can find new and many interesting people from your friends of friends.</p>
  </article>
</section>

<script>
$(function () {
  $('#app_request').click(function () {
    FB.ui({
      method: 'apprequests',
      message: 'You should learn more about this awesome game.',
      data: 'tracking information for the user'
    });
  });
});
</script>